<h1><%= @restaurant.name %></h1>
    <br><br>
    <img src="<%= @restaurant.image_url %>" alt="<%= @restaurant.name %>" height="200" width="270"><br>
    <br><br>
    <p><strong>Options:</strong> <%= @restaurant.options %></p>
    <p><strong>Source:</strong> <%= @restaurant.source %></p>
    <p><strong>By:</strong> <%= @restaurant.user.name %></p>
    <h5>Created At: <%= @restaurant.created_at %><h5>
    Updated At: <%= @restaurant.updated_at %>
    <br><br>

    <% if authorized_to_edit?(@restaurant) %>

    <a href="/restaurants/<%= @restaurant.id %>/edit">Edit Restaurant</a>

  <form method="post" action="/restaurants/<%= @restaurant.id %>">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete This Restaurant">
  </form>

<% end %>



