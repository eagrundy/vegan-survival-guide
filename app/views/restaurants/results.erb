
<br><br>
<% if @restaurants.present? %>

<% @restaurants.each do |restaurant| %>
    <h3><a href="/restaurants/<%= restaurant.id %>"><%=restaurant.name %></a></h3>
    <img src="<%= restaurant.image_url %>" alt="<%= restaurant.name %>" height="200" width="270">
    <br><br>
    <p><strong>Options:</strong> <%= restaurant.options %></p>
    <p><strong>Source:</strong> <%= restaurant.source %></p>
    <p><strong>Created by:</strong> <%= restaurant.user.name %></a></h3>
    <h5><p>Last update: <%= restaurant.updated_at.strftime("%m/%d/%Y at %I:%M%p") %></p></h5><br>
<% end %>
<% else %>
    <%= flash[:error] = "There are no Restaurants containing the word(s): #{params[:sort][:keyword]}" %>
    <% redirect '/search' %>
<% end %>
