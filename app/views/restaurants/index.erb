<h1>All Restaurants</h1>
<% @restaurants.each do |restaurant| %>
    <h4><a href="/restaurants/<%= restaurant.id %>"><%=restaurant.name %></a></h4>
    <br><br>
    <img src="<%= restaurant.image_url %>" alt="<%= restaurant.name %>" height="200" width="200">
    <br><br>
    <p><strong>Options:</strong> <%= restaurant.options %></p>
    <p><strong>Source:</strong> <%= restaurant.source %></p>
    <p><strong>By:</strong> <%= restaurant.user.name %></p>
    <strong>Created At: <%= restaurant.created_at %></strong>
    <br><br>
    <% end %>